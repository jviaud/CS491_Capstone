<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#DDE3EC</item>
        <item name="cardbackground">#FFFFFF</item>
        <item name="textcolor">#eef1f1</item>
        <item name="textcolor_alt">#000000</item>
        <item name="tintcolor">#000000</item>
        <item name="buttoncolor_transparent">#A29E9E</item>
        <item name="buttoncolor">#A29E9E</item>
        <item name="iconcolor">#FFFFFF</item>
        <item name="toolbarcolor">#1F1F1F</item>
        <item name="fabcolor">#225e5e</item>
        <item name="android:textColorHint">#E8E8E8</item>
        <item name="devidercolor">#D6D6D6</item>
        <item name="launcher_background">#23DBDC</item>
    </style>

    <!--  STYLE FOR NEW GOAL ACTIVITY  -->
    <style name="GoalTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/bottomnav</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--    -->

    <!--  STYLE FOR TAB LAYOUT  -->
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="tabIndicatorColor">@color/highlight</item>
        <item name="tabBackground">@color/cardbackground</item>
        <item name="tabSelectedTextColor">@color/highlight</item>
        <item name="background">@color/cardbackground</item>
        <item name="tabTextColor">@color/textcolor</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <!---->


    <!--    STYLE FOR TRANSPARENT ACTIVITY-->
    <style name="Theme.Transparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--    STYLE FOR TRANSPARENT ACTIVITY-->


    <!--    STYLING FOR INTRO FRAGMENTS-->
    <style name="AppTheme.Intro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--    END STYLING FOR INTRO FRAGMENTS-->


    <!--STYLING FOR BOTTOM NAV -->
    <style name="BottomNavigation">
        <item name="android:background">?attr/backgroundcolor</item>
        <item name="android:backgroundTint">?attr/backgroundcolor</item>
        <item name="itemTextColor">?attr/colorPrimary</item>
    </style>
    <!-- -->


    <!--STYLING FOR TAB LAYOUT -->
    <!--    -->

    <!-- TRANSPARENT ACTIVITY AWARD-->
    <style name="Theme.TransparentCard" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <!--    -->

    <!--NEXT AND PREV BUTTON STYLING-->
    <style name="ShapeAppearanceOverlay.Button.Triangle.Next" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>

        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopRight">18dp</item>
        <item name="cornerSizeBottomRight">18dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.Triangle.Prev" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>

        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSizeTopLeft">18dp</item>
        <item name="cornerSizeBottomLeft">18dp</item>
    </style>
    <!--    -->
</resources>
