<resources>

    Base application theme.

    <style name="AppTheme_Dark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="backgroundcolor">@color/backgroundcolor</item>
        <item name="cardbackground">@color/cardbackground</item>
        <item name="cardbackground_alt">@color/cardbackground_alt</item>

        <item name="textcolor">@color/textcolor</item>
        <item name="textcolor_special">#FFFFFF</item>
        <item name="textcolor_secondary">@color/textcolor_secondary</item>
        <item name="textcolor_tertiary">@color/textcolor_tertiary</item>
        <item name="textcolor_alt">@color/textcolor_alt</item>

        <item name="highlight">@color/highlight</item>
        <item name="fabcolor">@color/fabcolor</item>
        <item name="android:textColorHint">@color/textcolor_secondary</item>

        <item name="cardSpecial">@color/highlight</item>
        <item name="cardSpecial2">@color/backgroundcolor</item>

        <item name="devidercolor">@color/devidercolor_light</item>
        <item name="launcher_background">#23DBDC</item>
        <item name="android:ambientShadowAlpha">.4</item>
        <item name="android:spotShadowAlpha">.4</item>
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu_Dark</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme_Dark</item>
        <item name="android:textColorPrimary">@color/textcolor</item>
        <item name="colorControlHighlight">@color/ripple_26</item>
        <item name="android:textColor">@color/textcolor</item>

        <item name="TabLayoutStyle">@style/MineCustomTabText_Dark</item>
        <item name="TabLayoutText">@style/TabText</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
    </style>


    <!--    LIGHT-->
    <style name="AppTheme_Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/intro_inactive_indicator</item>
        <item name="colorPrimaryDark">@color/textcolor_secondary</item>
        <item name="colorAccent">@color/intro_active_indicator</item>

        <item name="backgroundcolor">@color/backgroundcolor_light</item>
        <item name="cardbackground">@color/cardbackground_light</item>
        <item name="cardbackground_alt">@color/cardbackground_alt_light</item>

        <item name="textcolor">@color/textcolor_light</item>
        <item name="textcolor_special">#FFFFFF</item>
        <item name="textcolor_secondary">@color/textcolor_secondary_light</item>
        <item name="textcolor_tertiary">@color/textcolor_tertiary_light</item>
        <item name="textcolor_alt">@color/textcolor_alt_light</item>

        <item name="highlight">@color/highlight_light</item>
        <item name="fabcolor">@color/fabcolor_light</item>
        <item name="android:textColorHint">@color/textcolor_secondary_light</item>

        <item name="cardSpecial">@color/cardbackground</item>
        <item name="cardSpecial2">#58318A</item>

        <item name="devidercolor">@color/devidercolor_light</item>
        <item name="launcher_background">#23DBDC</item>
        <item name="android:ambientShadowAlpha">.1</item>
        <item name="android:spotShadowAlpha">.1</item>
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu_Light</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme_Light</item>
        <item name="android:textColorPrimary">@color/textcolor_light</item>
        <item name="colorControlHighlight">@color/ripple_26</item>
        <item name="android:textColor">@color/textcolor_light</item>

        <item name="TabLayoutStyle">@style/MineCustomTabText_Light</item>
        <item name="TabLayoutText">@style/TabText</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
    </style>
    <!-- Base application theme. -->


    <!--  STYLE FOR POPUP MENU  -->
    <!--    DARK MODE-->
    <style name="itemTextStyle.AppTheme_Dark" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/textcolor</item>
    </style>

    <style name="MyApp.PopupMenu_Dark" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">?attr/cardbackground</item>
    </style>

    <!--LIGHT MODE-->
    <style name="itemTextStyle.AppTheme_Light" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/textcolor_light</item>
    </style>

    <style name="MyApp.PopupMenu_Light" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/cardbackground_light</item>
    </style>
    <!--  STYLE FOR POPUP MENU  -->

    <!--    PREFERENCE SETTING FRAGMENT-->
    <style name="SettingsFragmentStyle_Light" parent="PreferenceFragment">
        <item name="android:textColor">@color/textcolor_light</item>
        <item name="android:textColorSecondary">@color/textcolor_secondary_light</item>
        <item name="colorAccent">@color/highlight</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
    </style>


    <style name="SettingsFragmentStyle_Dark" parent="PreferenceFragment">
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textColorSecondary">@color/textcolor_secondary</item>
        <item name="colorAccent">@color/highlight_light</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
    </style>
    <!--    -->


    <!--  STYLE FOR NEW GOAL ACTIVITY  -->
    <!--    DARK MODE-->
    <style name="GoalTheme_Dark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="backgroundcolor">@color/backgroundcolor</item>
        <item name="cardbackground">@color/cardbackground</item>
        <item name="cardbackground_alt">@color/cardbackground_alt</item>
        <item name="textcolor">@color/textcolor</item>
        <item name="textcolor_special">#FFFFFF</item>
        <item name="textcolor_secondary">@color/textcolor_secondary</item>
        <item name="textcolor_tertiary">@color/textcolor_tertiary</item>

        <item name="highlight">@color/highlight</item>

        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu_Dark</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme_Dark</item>

        <item name="TabLayoutStyle">@style/MineCustomTabText_Dark</item>
        <item name="TabLayoutText">@style/TabText</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
    </style>

    <!--LIGHT MODE-->
    <style name="GoalTheme_Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="backgroundcolor">@color/backgroundcolor_light</item>
        <item name="cardbackground">@color/cardbackground_light</item>
        <item name="cardbackground_alt">@color/cardbackground_alt</item>
        <item name="textcolor_special">#FFFFFF</item>
        <item name="textcolor">@color/textcolor_light</item>
        <item name="textcolor_secondary">@color/textcolor_secondary_light</item>
        <item name="textcolor_tertiary">@color/textcolor_tertiary_light</item>
        <item name="textcolor_alt">@color/textcolor_alt_light</item>

        <item name="highlight">@color/highlight</item>

        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu_Light</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme_Light</item>

        <item name="TabLayoutStyle">@style/MineCustomTabText_Light</item>
        <item name="TabLayoutText">@style/TabText</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
    </style>
    <!--    -->

    <!--  STYLE FOR TAB LAYOUT  -->
    <style name="MineCustomTabText_Dark" parent="TextAppearance.Design.Tab">
        <item name="tabIndicatorColor">@color/highlight</item>
        <item name="tabBackground">@color/cardbackground</item>
        <item name="tabSelectedTextColor">@color/highlight</item>
        <item name="background">@color/cardbackground</item>
        <item name="tabTextColor">@color/textcolor</item>
    </style>

    <style name="MineCustomTabText_Light" parent="TextAppearance.Design.Tab">
        <item name="tabIndicatorColor">@color/highlight</item>
        <item name="tabBackground">@color/cardbackground_light</item>
        <item name="tabSelectedTextColor">@color/highlight</item>
        <item name="background">@color/cardbackground_light</item>
        <item name="tabTextColor">@color/textcolor_light</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!---->


    <!--    STYLE FOR TRANSPARENT ACTIVITY-->
    <style name="Theme.Transparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--    STYLE FOR TRANSPARENT ACTIVITY-->


    <!--    STYLING FOR INTRO FRAGMENTS-->
    <style name="AppTheme.Intro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--    END STYLING FOR INTRO FRAGMENTS-->


    <!--STYLING FOR BOTTOM NAV -->
    <style name="BottomNavigation">
        <item name="android:background">@color/backgroundcolor</item>
        <item name="android:backgroundTint">@color/backgroundcolor</item>
        <item name="itemTextColor">@color/colorPrimary</item>
    </style>
    <!-- -->


    <!--STYLING FOR TAB LAYOUT -->
    <!--    -->

    <!-- TRANSPARENT ACTIVITY AWARD-->
    <style name="Theme.TransparentCard" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <!--    -->

    <!--NEXT AND PREV BUTTON STYLING-->
    <style name="ShapeAppearanceOverlay.Button.Triangle.Next" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>

        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopRight">18dp</item>
        <item name="cornerSizeBottomRight">18dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.Triangle.Prev" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>

        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSizeTopLeft">18dp</item>
        <item name="cornerSizeBottomLeft">18dp</item>
    </style>
    <!--    -->


    <!--    WINDOW ANIMATION-->
    <style name="WindowAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
