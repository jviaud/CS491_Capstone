<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/tabbed_fragment_container"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:clipToPadding="false">

        <View
            android:id="@+id/indicator"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tab_gradient_bg" />

        <com.google.android.material.tabs.TabLayout
            style="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:id="@+id/tabbed_layout"
            android:layout_width="match_parent"
            app:tabMode="fixed"
            app:tabRippleColor="@null"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:clipToPadding="false"
            app:tabGravity="center"
            app:tabIndicatorColor="#ffffff"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingEnd="10dp"
            app:tabPaddingStart="10dp"
            app:tabSelectedTextColor="?attr/textcolor"

            />

    </FrameLayout>


    <view class="com.example.cs491_capstone.ui.intro.IntroManager$LockableViewPager"
        android:layout_marginTop="10dp"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </view>


</LinearLayout>